# File: deploy.config
# Deployment configuration file
# Copy this to deploy.config and update with your server details

# Server Configuration
SERVER_HOST="your-server.com"
SERVER_USER="your-username"
SERVER_PORT=22
SERVER_PATH="/var/www/html/your-project"

# Local Configuration
LOCAL_PATH="."

# Database Configuration (used for backups)
DB_BACKUP_PATH="/home/$SERVER_USER/backups/"
DB_BACKUP_RETENTION_DAYS=30

# Deployment Options
AUTO_BACKUP=true
AUTO_MIGRATIONS=true
AUTO_PERMISSIONS=true
VERBOSE_OUTPUT=true

# Example configurations for different environments:

# Development Server
# SERVER_HOST="dev.yoursite.com"
# SERVER_USER="devuser"
# SERVER_PATH="/var/www/dev"

# Staging Server
# SERVER_HOST="staging.yoursite.com"
# SERVER_USER="staginguser"
# SERVER_PATH="/var/www/staging"

# Production Server
# SERVER_HOST="yoursite.com"
# SERVER_USER="produser"
# SERVER_PATH="/var/www/html"
